<div class="container">

<ol class="breadcrumb">
  <li><a href="/">Home</a></li>
  <li><%= link_to @spec.display_name, specification_path(@spec, anchor: 'paths') %></li>
  <li><%= link_to @path.uri, specification_path_path(@spec, @path) %></li>
  <li class="active">Create a request</li>
</ol>

<h1>Create a request</h1>

<%= form_tag(specification_path_verbs_path(@spec, @path), method: "post") do %>
  <br/><%= label_tag(:name, "Name:") %>
  <br/><%= text_field_tag(:name, "", class: "form-control", placeholder: "What is this request about?") %>
  <br/><%= label_tag(:since, "Since:") %>
  <br/><%= text_field_tag(:since, "", class: "form-control", placeholder: "1.0.24 (Release 8.0)") %>
  <br/><%= label_tag(:description, "Description:") %>
  <br/><%= text_area_tag(:description, "", class: 'article-editor') %>
  <br/><%= label_tag(:method, "Method:") %>
  <br/><%= select_tag(:method, options_for_select(['GET', 'POST', 'PUT', 'DELETE'], 'GET'), class: "form-control") %>
  <br/><%= label_tag(:api_group, "API Group:") %>
  <br/><%= select_tag(:api_group, options_for_select(['Light', 'Medium', 'Heavy'], 'Light'), class: "form-control") %>
  <br/><%= label_tag(:permissions, "Required Permissions:") %>
  <br/><%= text_field_tag(:permissions, "", class: "form-control", placeholder: "Multiple permissions separated by commas") %>
  <br/><%= label_tag(:batch, "Batch:") %>
  <br/><%= select_tag(:batch, options_for_select(['Yes', 'No'], 'No'), class: "form-control") %>
  <br/><%= label_tag(:visibility, "Visibility:") %>
  <br/><%= select_tag(:visibility, options_for_select(['Public Basic', 'Public Advanced', 'Public Internal', 'Internal', 'Integration'], 'Public Basic'), class: "form-control") %>
  <br/><%= label_tag(:status, "Status:") %>
  <br/><%= select_tag(:status, options_for_select(['Normal', 'Deprecated', 'Disabled', 'NoDoc'], 'Normal'), class: "form-control") %>
  <br/><%= submit_tag("Create", class: "btn btn-primary") %>
  <%= link_to "Cancel", specification_path_path(@spec, @path), class: "btn btn-default" %>
<% end %>

</div>

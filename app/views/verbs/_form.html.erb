<br/><%= label_tag(:name, "Name:") %>
<br/><%= text_field_tag(:name, verb.name.presence || '', class: "form-control", placeholder: "What is this request about?") %>
<br/><%= label_tag(:since, "Since:") %>
<br/><%= text_field_tag(:since, verb.since.presence || '', class: "form-control", placeholder: "1.0.24 (Release 8.0)") %>
<br/><%= label_tag(:description, "Description:") %>
<br/><%= text_area_tag(:description, verb.description.presence || '', class: 'article-editor', placeholder: 'Styling with Markdown is supported') %>
<br/><%= label_tag(:method, "Method:") %>
<br/><%= select_tag(:method, options_for_select(['GET', 'POST', 'PUT', 'DELETE'], verb.method.presence || 'GET'), class: "form-control") %>
<br/><%= label_tag(:api_group, "API Group:") %>
<br/><%= select_tag(:api_group, options_for_select(['Light', 'Medium', 'Heavy', 'Auth'], verb.api_group.presence || 'Light'), class: "form-control") %>
<br/><%= label_tag(:permissions, "Required Permissions:") %>
<br/><%= text_field_tag(:permissions, verb.permissions.presence || '', class: "form-control", placeholder: "Multiple permissions separated by commas") %>
<br/><%= label_tag(:batch, "Batch:") %>
<br/><%= select_tag(:batch, options_for_select(['Yes', 'No'], verb.batch ? 'Yes' : 'No'), class: "form-control") %>
<br/><%= label_tag(:visibility, "Visibility:") %>
<br/><%= select_tag(:visibility, options_for_select(['Public Basic', 'Public Advanced', 'Public Internal', 'Internal', 'Integration'], verb.visibility.presence || 'Public Basic'), class: "form-control") %>
<br/><%= label_tag(:status, "Status:") %>
<br/><%= select_tag(:status, options_for_select(['Normal', 'Deprecated', 'Disabled', 'NoDoc'], verb.status.presence || 'Normal'), class: "form-control") %>

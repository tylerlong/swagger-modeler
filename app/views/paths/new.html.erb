<div class="container">

<ol class="breadcrumb">
  <li><a href="/">Home</a></li>
  <li><%= link_to @spec.display_name, specification_path(@spec, anchor: 'paths') %></li>
  <li class="active">Create a path</li>
</ol>

<h1>Create a path</h1>

<%= form_tag(specification_paths_path(@spec), method: "post") do %>
  <br/><%= label_tag(:uri, "URI:") %>
  <br/><%= text_field_tag(:uri, "", class: "form-control") %>
  <br/><%= submit_tag("Create", class: "btn btn-primary") %>
  <%= link_to "Cancel", specification_path(@spec, anchor: 'paths'), class: "btn btn-default" %>
<% end %>

</div>

<div class="container">

<ol class="breadcrumb">
  <li><a href="/">Home</a></li>
  <li><%= link_to @spec.display_name, @spec %></li>
  <li class="active"><%= @defi.name %></li>
</ol>

<h1><%= @defi.name %></h1>
<%= link_to 'Edit', edit_specification_definition_path(@spec, @defi), class: "btn btn-primary" %>
<%= link_to 'Destroy', specification_definition_path(@spec, @defi), data: { confirm: 'Are you sure?' }, class: "btn btn-danger", :method => :delete %>

<br/><br/>
<p>Description: <%= @defi.description %></p>

<h2>Properties</h2>
<table class="table">
  <thead>
    <tr><th>Name</th><th>Type</th><th>Format</th><th>Required</th><th>Description</th></tr>
  </thead>
  <tbody>
    <% @defi.properties.order('position asc').each do |prop| %>
      <tr>
        <td><%= prop.name %></td>
        <td><%= link_to_type(prop) %></td>
        <td><%= link_to_format(prop) %></td>
        <td><%= prop.required %></td>
        <td><%= prop.description %></td>
      </tr>
    <% end %>
  </tbody>
</table>

</div>

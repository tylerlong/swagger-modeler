<div class="container">

<ol class="breadcrumb">
  <li><a href="/">Home</a></li>
  <li><%= link_to @spec.display_name, specification_path(@spec, anchor: 'definitions') %></li>
  <li class="active">Create a definition</li>
</ol>

<h1>Create a definition</h1>

<%= form_tag(specification_definitions_path(@spec), method: "post") do %>
  <br/><%= label_tag(:name, "Name:") %>
  <br/><%= text_field_tag(:name, "", class: "form-control") %>
  <br/><%= label_tag(:description, "Description:") %>
  <br/><%= text_field_tag(:description, "", class: "form-control") %>
  <br/><%= label_tag(:properties_text, "Properties:") %>
  <br/><%= text_area_tag(:properties_text, "") %>
  <br/><%= submit_tag("Create", class: "btn btn-primary") %>
  <%= link_to "Cancel", specification_path(@spec, anchor: 'definitions'), class: "btn btn-default" %>
<% end %>

</div>

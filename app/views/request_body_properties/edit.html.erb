<div class="container">

<ol class="breadcrumb">
  <li><a href="/">Home</a></li>
  <li><%= link_to @spec.display_name, specification_path(@spec, anchor: 'paths') %></li>
  <li><%= link_to @path.uri, specification_path_path(@spec, @path) %></li>
  <li><%= link_to "[#{@verb.method}] " + @verb.name, specification_path_verb_path(@spec, @path, @verb) %></li>
  <li class="active">Request Body</li>
</ol>

<h1>Edit Request Body</h1>

<%= form_tag(specification_path_verb_request_body_properties_path(@spec, @path, @verb), method: "put") do %>
  <%= text_area_tag(:request_body_text, @verb.request_body_text, class: "properties-editor") %>
  <br/><%= submit_tag("Update", class: "btn btn-primary") %>
  <%= link_to "Cancel", specification_path_verb_path(@spec, @path, @verb, anchor: 'request_body'), class: "btn btn-default" %>
<% end %>

</div>
